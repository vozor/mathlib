namespace iso

variables {X Y : C}

/--
The opposite isomorphism.
-/
protected def op (Œ± : X ‚âÖ Y) : op Y ‚âÖ op X :=
{ hom := Œ±.hom.op,
  inv := Œ±.inv.op,
  hom_inv_id' := has_hom.hom.unop_inj Œ±.inv_hom_id,
  inv_hom_id' := has_hom.hom.unop_inj Œ±.hom_inv_id }

